{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>
    <div>{{ course.description }}</div>
    <ol>
        {% for lesson in lessons %}
            <li>
                <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a>
            </li>
        {% endfor %}
    </ol>
    <br/>
    <a href="{{ path('app_course_index') }}">Назад к списку курсов</a>
    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Изменить</a>
    <a href="{{ path('app_lesson_new', {'course_id': course.id}) }}">Добавить урок</a>
    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
